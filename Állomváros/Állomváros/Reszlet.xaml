<Window x:Class="Állomváros.Reszlet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Állomváros"
        mc:Ignorable="d"
        Title="MainWindow"  Background="#181735" Height="500" Width="900" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
        </Grid.ColumnDefinitions>
        <Grid Background="#0f0f2d" Grid.ColumnSpan="2"
              MouseDown="Grid_MouseDown">

            <TextBlock
                Text="Állomváros"
                FontSize="20"
                Foreground="White"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontFamily="Fonts/#Dosis"
                FontWeight="Medium"
            ></TextBlock>
        </Grid>
        
      
        
        <StackPanel  Grid.Row="1">
            
            <TextBlock x:Name="TitleText" FontSize="18" FontWeight="Bold" Margin="10"/>
            <StackPanel  VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="ContentPanel" Margin="10"></StackPanel>

            <Button
                Content="Confirm"
                Foreground="White"
                FontSize="28"
                Tag="szolgaltatas"
                FontWeight="Medium"
                Margin="5"
                Click="Button_Click"
                Grid.Row="2">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="TextElement.FontFamily" Value="Fonts/#Dosis"></Setter>
                        <Setter Property="Background" Value="#FE6584"></Setter>
                        <Setter Property="Cursor" Value="Hand"></Setter>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4C70"></Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="280" Height="35"
    CornerRadius="12"
    Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"></ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>


        </StackPanel>


        <StackPanel Grid.Row="2">

            <Button
                Content="OK"
                Foreground="White"
                FontSize="28"
                Tag="szolgaltatas"
                FontWeight="Medium"
                Margin="5"
                Click="Button_Click"
                Grid.Row="2">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="TextElement.FontFamily" Value="Fonts/#Dosis"></Setter>
                        <Setter Property="Background" Value="#FE6584"></Setter>
                        <Setter Property="Cursor" Value="Hand"></Setter>

                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF4C70"></Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="280" Height="35"
    CornerRadius="12"
    Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"></ContentPresenter>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </StackPanel>
    </Grid>


</Window>
