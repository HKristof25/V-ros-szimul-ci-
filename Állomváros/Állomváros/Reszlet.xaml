<Window x:Class="Állomváros.Reszlet"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Állomváros"
        mc:Ignorable="d"
        Title="MainWindow"  Background="#181735" Height="500" Width="900" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="139*"></ColumnDefinition>
            <ColumnDefinition Width="41*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Background="#0f0f2d" Grid.ColumnSpan="2"
              MouseDown="Grid_MouseDown">

            <TextBlock
                Text="Állomváros"
                FontSize="20"
                Foreground="White"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontFamily="Fonts/#Dosis"
                FontWeight="Medium"
            ></TextBlock>
        </Grid>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <Button Content="Ok" Margin="20, 430,20,0" Click="Button_Click"/>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock x:Name="TitleText" FontSize="18" FontWeight="Bold" Margin="10"/>
            <StackPanel x:Name="ContentPanel" Margin="10"/>
            <Button Content="Confirm" Margin="10"/>
        </StackPanel>
    </Grid>


</Window>
