<Window x:Class="Állomváros.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Állomváros"
        mc:Ignorable="d"
        Title="MainWindow"  Background="#181735" Height="500" Width="900" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="25"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Background="#0f0f2d" Grid.ColumnSpan="2"
              MouseDown="Grid_MouseDown">

            <TextBlock
                Text="Állomváros"
                FontSize="20"
                Foreground="White"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                FontFamily="Fonts/#Dosis"
                FontWeight="Medium"
            ></TextBlock>
        </Grid>

        <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="20">

  

            <StackPanel   Orientation="Horizontal">
                
                <TextBlock
                    Text="Hónap: 1."
                    FontSize="25"
                    Foreground="White"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Left"
                    FontFamily="Fonts/#Dosis"
                    FontWeight="Medium"
            ></TextBlock>

                <TextBlock
                    Margin="120,0,0,0"
                    Text="Elégedettség: 80%"
                    FontSize="25"
                    Foreground="White"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    FontFamily="Fonts/#Dosis"
                    FontWeight="Medium"
            ></TextBlock>

            </StackPanel>
            <StackPanel Margin="0,0,0,20">

                <TextBlock
                    Margin="120,0,0,0"
                    Text="(min 40%)"
                    FontSize="20"
                    Foreground="White"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    FontFamily="Fonts/#Dosis"
                    FontWeight="Medium"
            ></TextBlock>

                    <Image Width="280" Height="280" Source="Images/city.webp" RenderOptions.BitmapScalingMode="Fant"></Image>





                    <TextBlock
              Text="Épületek Minősége : 80%"
              FontSize="32"
              Foreground="White"
              VerticalAlignment="Center"
              HorizontalAlignment="Center"
              FontFamily="Fonts/#Dosis"
              FontWeight="Medium"
                    Margin="10"
      ></TextBlock>


            </StackPanel>
        </StackPanel>

        <StackPanel VerticalAlignment="Center" Margin="20" Grid.Row="1" Grid.Column="1">
            <TextBlock
              Text="Pénz: 100 000 000"
              FontSize="40"
              Foreground="White"
              VerticalAlignment="Center"
              HorizontalAlignment="Center"
              FontFamily="Fonts/#Dosis"
              FontWeight="Medium"
      ></TextBlock>

            <StackPanel Margin="20">
                <Button
            Content="Új szolgáltatás"
            Foreground="White"
             FontSize="28"
             FontWeight="Medium"
             Margin="20">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value="Fonts/#Dosis"></Setter>
                            <Setter Property="Background" Value="#FE6584"></Setter>
                            <Setter Property="Cursor" Value="Hand"></Setter>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF4C70"></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="280" Height="35"
                CornerRadius="12"
                Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"></ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
Content="Karbantartás"
Foreground="White"
 FontSize="28"
 FontWeight="Medium"
 Margin="20">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value="Fonts/#Dosis"></Setter>
                            <Setter Property="Background" Value="#FE6584"></Setter>
                            <Setter Property="Cursor" Value="Hand"></Setter>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF4C70"></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="280" Height="35"
    CornerRadius="12"
    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"></ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
Content="Új Épület"
Foreground="White"
 FontSize="28"
 FontWeight="Medium"
 Margin="20">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value="Fonts/#Dosis"></Setter>
                            <Setter Property="Background" Value="#FE6584"></Setter>
                            <Setter Property="Cursor" Value="Hand"></Setter>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF4C70"></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="280" Height="35"
    CornerRadius="12"
    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"></ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button
Content="Start"
Foreground="White"
 FontSize="28"
 FontWeight="Medium"
 Margin="20">

                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="TextElement.FontFamily" Value="Fonts/#Dosis"></Setter>
                            <Setter Property="Background" Value="#FE6584"></Setter>
                            <Setter Property="Cursor" Value="Hand"></Setter>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#FF4C70"></Setter>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>

                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="280" Height="35"
    CornerRadius="12"
    Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"></ContentPresenter>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>

            <TextBlock
          Text="Pénz: 100 000 000"
          FontSize="40"
          Foreground="White"
          VerticalAlignment="Center"
          HorizontalAlignment="Center"
          FontFamily="Fonts/#Dosis"
          FontWeight="Medium"
  ></TextBlock>

        </StackPanel>
        <Rectangle Width="10" Height="800" Fill="#0f0f2d" Margin="445,0,445,-300" Grid.RowSpan="1" Grid.Row="2" Grid.ColumnSpan="2" ></Rectangle>
    </Grid>
